---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Home">
  <h1 class="text-4xl font-bold mb-8">Latest Posts</h1>
  
  <div class="space-y-8">
    {posts.map(post => (
      <article class="border-b border-gray-200 dark:border-gray-700 pb-8">
        <h2 class="text-2xl font-bold mb-2">
          <a 
            href={`/blog/${post.slug}`} 
            class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
          >
            {post.data.title}
          </a>
        </h2>
        <div class="flex items-center space-x-2 text-sm mb-2">
          <FormattedDate date={post.data.pubDate} />
          <span>â€¢</span>
          <span>{post.data.tags.map(tag => `#${tag}`).join(' ')}</span>
        </div>
        <p class="text-gray-600 dark:text-gray-300">{post.data.description}</p>
      </article>
    ))}
  </div>
</Layout>

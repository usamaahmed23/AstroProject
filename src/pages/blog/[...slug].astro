---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import FormattedDate from '../../components/FormattedDate.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
  <article class="prose dark:prose-invert max-w-3xl mx-auto">
    <h1 class="text-4xl font-bold mb-2">{post.data.title}</h1>
    <div class="flex items-center space-x-4 text-sm mb-8">
      <FormattedDate date={post.data.pubDate} />
      <div class="flex space-x-2">
        {post.data.tags.map(tag => (
          <a 
            href={`/tags/${tag}`} 
            class="px-2 py-1 bg-gray-100 dark:bg-gray-800 rounded-full text-sm hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
          >
            {tag}
          </a>
        ))}
      </div>
    </div>
    <Content />
  </article>
</Layout>
